<%= form_for(@draft) do |f| %>

  <div class="form-group">
    <%= f.label :draft_type %>
    <%= f.text_field :draft_type, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :number_of_teams %>
    <%= f.number_field , :class => 'form-control', %>
  </div>

  <%= f.submit :class => 'btn btn-info' %>

<% end %>
